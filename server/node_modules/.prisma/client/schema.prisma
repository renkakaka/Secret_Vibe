// Prisma схема для Secret Vibe — SQLite по умолчанию
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id
  nickname  String
  avatarUrl String?
  tags      String // JSON-строка с массивом тегов

  posts      Post[]
  matches1   Match[]     @relation("User1")
  matches2   Match[]     @relation("User2")
  challenges Challenge[]
  inviteCode InviteCode?
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  content   String
  mediaUrl  String?
  tags      String // JSON
  timestamp DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Match {
  id        String   @id @default(cuid())
  user1Id   String
  user2Id   String
  createdAt DateTime @default(now())

  user1    User      @relation("User1", fields: [user1Id], references: [id])
  user2    User      @relation("User2", fields: [user2Id], references: [id])
  messages Message[]
}

model Message {
  id             String   @id @default(cuid())
  matchId        String
  senderId       String
  content        String
  timestamp      DateTime @default(now())
  selfDestructAt DateTime

  match Match @relation(fields: [matchId], references: [id])
}

model Challenge {
  id       String @id @default(cuid())
  userId   String
  type     String
  status   String
  reward   String
  progress Int?

  user User @relation(fields: [userId], references: [id])
}

model InviteCode {
  id     String  @id @default(cuid())
  userId String  @unique
  code   String  @unique
  usedBy String?

  user User @relation(fields: [userId], references: [id])
}
